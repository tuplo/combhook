{
	"name": "@tuplo/use-combo-box",
	"description": "Headless combo box hook for React",
	"version": "0.0.0-development",
	"repository": "git@github.com:tuplo/use-combo-box.git",
	"author": "Rui Costa",
	"license": "MIT",
	"keywords": [
		"react",
		"react hooks",
		"combo box",
		"headless ui",
		"WAI-ARIA"
	],
	"types": "dist/index.d.ts",
	"module": "./dist/index.mjs",
	"main": "./dist/index.cjs",
	"exports": {
		".": [
			{
				"import": "./dist/index.mjs",
				"require": "./dist/index.cjs",
				"default": "./dist/index.mjs"
			},
			"./dist/index.mjs"
		]
	},
	"files": [
		"dist/use-combo-box.d.ts",
		"dist/index.cjs",
		"dist/index.d.ts",
		"dist/index.mjs"
	],
	"scripts": {
		"build": "tsx sh/build.ts",
		"coverage": "tsx sh/coverage.ts",
		"format": "prettier --write src sh",
		"lint:ts": "tsc --noEmit",
		"lint": "eslint src --ext ts,tsx",
		"test:ci": "IS_REACT_ACT_ENVIRONMENT=true jest --ci",
		"test": "IS_REACT_ACT_ENVIRONMENT=true jest --watch"
	},
	"peerDependencies": {
		"react": "^16.8.6 || ^17.0.0 || ^18.0.0"
	},
	"devDependencies": {
		"@testing-library/dom": "8.17.1",
		"@testing-library/jest-dom": "5.16.5",
		"@testing-library/react": "13.3.0",
		"@testing-library/user-event": "14.4.3",
		"@types/jest": "28.1.7",
		"@typescript-eslint/eslint-plugin": "5.33.1",
		"@typescript-eslint/parser": "5.33.1",
		"esbuild": "0.15.5",
		"eslint": "8.22.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jest": "26.8.4",
		"eslint-plugin-testing-library": "5.6.0",
		"jest": "29.3.1",
		"jest-environment-jsdom": "28.1.3",
		"nyc": "15.1.0",
		"prettier": "2.7.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"ts-jest": "29.0.3",
		"tsx": "3.12.2",
		"typescript": "4.7.4",
		"zx": "7.1.1"
	}
}
